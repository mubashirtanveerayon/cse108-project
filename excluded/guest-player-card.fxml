<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.materialicons.MaterialIconView?>
<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="root" alignment="CENTER" minWidth="-Infinity" spacing="5.0" styleClass="parent-container" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="PlayerCard">
   <children>
      <AnchorPane maxWidth="1.7976931348623157E308">
         <children>
            <Label fx:id="nameLabel" text="Name" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0">
               <font>
                  <Font name="System Bold" size="28.0" />
               </font>
            </Label>
         </children>
      </AnchorPane>
      <AnchorPane layoutX="10.0" layoutY="10.0" maxWidth="1.7976931348623157E308">
         <children>
            <Label fx:id="clubLabel" text="Club" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0">
               <font>
                  <Font size="24.0" />
               </font>
            </Label>
            <Button fx:id="detailsButton" mnemonicParsing="false" onAction="#onDetailsButtonPressed" text="Details" AnchorPane.bottomAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
               <font>
                  <Font size="20.0" />
               </font>
               <graphic>
                  <MaterialIconView glyphName="INFO" size="24" />
               </graphic>
            </Button>
         </children>
      </AnchorPane>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
   <stylesheets>
      <URL value="@client/gui/res/style/player-card.css" />
      <URL value="@client/gui/res/style/colors.css" />
      <URL value="@client/gui/res/style/outline-button.css" />
   </stylesheets>
</VBox>
